<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>AUTO ARTICLE</title>
  </head>
  <body style="background-color:gray;color:white">
    <h1>AUTO ARTICLE</h1>
    <h4> 회사명 : </h4>
    <input type="text" id="input_company_name" required minlength="4" maxlength="20" size="30">
    <button onclick="input_company(); alert(c_n_confirm)">입력</button>
    <h4> 제품명 : </h4>
    <input type="text" id="input_product_name" required minlength="4" maxlength="20" size="30">
    <button onclick="input_product(); alert(p_n_confirm)">입력</button>
    <h4> 출시일 : </h4>
    <input type="text" id="input_launch_date" required minlength="4" maxlength="20" size="30">
    <button onclick="input_launch(); alert(l_d_confirm)">입력</button>
    <h4> 맛 (형용사) : </h4>
    <input type="text" id="input_taste" required minlength="4" maxlength="20" size="30">
    <button onclick="input_taste(); alert(taste_confirm)">입력</button>
    <br>

    <script type="text/javascript">
    var c_n;
    var p_n;
    var l_d;
    var taste;
    var title;
    function input_company(){
    var input = document.getElementById("input_company_name").value;
    c_n = input;
    c_n_confirm = "회사명 : " + c_n;
    }
    function input_product(){
    var input = document.getElementById("input_product_name").value;
    p_n = input;
    p_n_confirm = "제품명 : " + p_n;
    }
    function input_launch(){
    var input = document.getElementById("input_launch_date").value;
    l_d = input;
    l_d_confirm = "출시일 : " + l_d;
    }
    function input_taste(){
    var input = document.getElementById("input_taste").value;
    taste = input;
    taste_confirm = "맛 (형용사) : " + taste;
    }
    function auto_title(){
      //var c_n = document.getElementById("input_product_name").value;
      //var p_n = document.getElementById("input_product_name").value;
      title = c_n + ',' + " " +
              l_d + " " +
              taste + " " +"맛의" + " " +
              "'" + p_n + "'" + " " + "출시";
      document.getElementById("auto_title").value = title;
    }
    </script>

    <br>
    <button onclick="auto_title()">제목 생성</button>
    <br>
    <textarea id="auto_title" rows="2" cols="50"></textarea>

  </body>
</html>
